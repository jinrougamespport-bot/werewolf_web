<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Webäººç‹¼</title>
    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
    <style>
        html, body { 
            height: 100%; margin: 0; padding: 0; 
            overflow: hidden; background-color: #7494C0; 
            display: flex; flex-direction: column; font-family: sans-serif;
            transition: background 3s ease-in-out; 
        }

        /* ãƒ­ã‚°ã‚¤ãƒ³é–¢é€£ */
        #login-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.95); display: flex; justify-content: center; align-items: center; z-index: 9999; }
        .login-box { background: white; padding: 25px; border-radius: 15px; text-align: center; width: 80%; max-width: 300px; }
        #username { width: 90%; padding: 12px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px; }
        .start-btn { width: 100%; padding: 12px; background: #4CAF50; color: white; border: none; border-radius: 5px; font-size: 18px; font-weight: bold; }

        #game-container { display: none; flex: 1; flex-direction: column; height: 100%; position: relative; }

        /* åœ°å›³ã¨ç®¡ç†ãƒœã‚¿ãƒ³ */
        .floating-map { 
            position: absolute; top: calc(10px + env(safe-area-inset-top)); right: 10px; 
            width: 100px; height: 100px; z-index: 1000;
            background: rgba(0,0,0,0.5); border: 2px solid white; border-radius: 8px; overflow: hidden;
        }
        #map-display { width: 100%; height: 100%; object-fit: contain; }

        .admin-bar { 
            position: absolute; top: calc(10px + env(safe-area-inset-top)); left: 10px; 
            display: flex; flex-direction: column; gap: 5px; z-index: 1000;
        }
        .admin-btn { font-size: 10px; padding: 6px 10px; color: white; background: rgba(0,0,0,0.6); border: 1px solid rgba(255,255,255,0.3); border-radius: 4px; }

        /* ãƒãƒ£ãƒƒãƒˆ */
        #chat-area { 
            flex: 1; overflow-y: auto; 
            padding: calc(60px + env(safe-area-inset-top)) 15px 10px 15px; 
            display: flex; flex-direction: column; 
        }
        .msg-container { margin-bottom: 12px; }
        .user-name { font-size: 0.75em; color: white; margin-bottom: 3px; text-shadow: 1px 1px 2px #000; }
        .msg-item { background: white; color: black; padding: 10px 16px; border-radius: 18px; align-self: flex-start; max-width: 85%; word-wrap: break-word; font-size: 15px; }
        .system { align-self: center; background: rgba(0,0,0,0.4); color: white; font-size: 0.75em; border-radius: 12px; padding: 4px 14px; margin: 8px 0; }

        /* ãƒ¢ãƒ¼ãƒ€ãƒ« */
        #fullscreen-overlay { 
            position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
            background: rgba(0,0,0,0.95); display: none; justify-content: center; align-items: center; z-index: 5000; 
        }
        #fullscreen-img { width: 90%; max-height: 80%; object-fit: contain; border: 2px solid white; }
        #close-btn { position: absolute; top: 40px; right: 20px; width: 44px; height: 44px; background: white; color: black; font-size: 30px; border: none; border-radius: 50%; }

        /* ã‚¯ã‚¤ãƒƒã‚¯ãƒªãƒ—ãƒ©ã‚¤ï¼šã“ã“ã‚’å›ºå®šã¨ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã«åˆ†ã‘ã‚‹ */
        #quick-reply { 
            display: flex; 
            background: rgba(255,255,255,0.15); 
            border-top: 1px solid rgba(255,255,255,0.2);
            padding: 10px 5px;
            overflow: hidden; /* è¦ªã¯ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã•ã›ãªã„ */
        }
        
        /* ğŸ“ç¾åœ¨åœ°ãƒœã‚¿ãƒ³ã‚’å·¦ã«å›ºå®š */
        #fixed-actions {
            padding-right: 8px;
            border-right: 1px solid rgba(255,255,255,0.3);
            margin-right: 8px;
            flex-shrink: 0;
        }

        /* ä»–ã®éƒ¨å±‹ãƒœã‚¿ãƒ³ã‚’æ¨ªã‚¹ã‚¯ãƒ­ãƒ¼ãƒ« */
        #scroll-actions {
            display: flex;
            gap: 8px;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch; /* iOSç”¨ã‚¹ãƒ ãƒ¼ã‚ºã‚¹ã‚¯ãƒ­ãƒ¼ãƒ« */
        }
        /* ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ãƒãƒ¼ã‚’éš ã™ï¼ˆä»»æ„ï¼‰ */
        #scroll-actions::-webkit-scrollbar { display: none; }

        .qr-btn { background: white; border-radius: 20px; border: none; padding: 10px 18px; white-space: nowrap; font-size: 13px; font-weight: bold; flex-shrink: 0; }
        .loc-btn { background: #ffeb3b; color: #333; }

        .controls { padding: 10px; background: #fff; display: flex; gap: 8px; padding-bottom: calc(10px + env(safe-area-inset-bottom)); }
        #chat-input { flex: 1; padding: 12px 18px; border-radius: 25px; border: 1px solid #ddd; font-size: 16px; outline: none; }
        .send-btn { background: #4CAF50; color: white; border: none; border-radius: 50%; width: 45px; height: 45px; flex-shrink: 0; font-size: 20px; }
    </style>
</head>
<body>

    <div id="login-overlay">
        <div class="login-box">
            <h2 style="margin: 0 0 20px 0;">Webäººç‹¼</h2>
            <input type="text" id="username" placeholder="åå‰ã‚’å…¥åŠ›..." autocomplete="off">
            <button class="start-btn" onclick="joinGame()">å…¥æ‘ã™ã‚‹</button>
        </div>
    </div>

    <div id="fullscreen-overlay">
        <button id="close-btn" onclick="closeFullscreen()">Ã—</button>
        <img id="fullscreen-img" src="" alt="photo">
        <div id="fullscreen-title" style="position: absolute; bottom: 10%; color: white; font-weight: bold;"></div>
    </div>

    <div id="game-container">
        <div class="floating-map">
            <img id="map-display" src="" alt="map">
        </div>

        <div class="admin-bar">
            <button class="admin-btn" onclick="changePhase('day')">â˜€ æœ</button>
            <button class="admin-btn" onclick="changePhase('night')">ğŸŒ™ å¤œ</button>
        </div>

        <div id="chat-area"></div>

        <div id="quick-reply">
            <div id="fixed-actions">
                <button class="qr-btn loc-btn" onclick="showCurrentLocation()">ğŸ“ ç¾åœ¨åœ°</button>
            </div>
            <div id="scroll-actions">
                </div>
        </div>

        <div class="controls">
            <input type="text" id="chat-input" placeholder="ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’å…¥åŠ›...">
            <button class="send-btn" onclick="sendMessage()">â¤</button>
        </div>
    </div>

    <script>
        const socket = io();
        let currentRoomName = "";
        let currentRoomUrl = "";
        const allRooms = ["å¾…æ©Ÿå®¤", "åºƒå ´", "ãƒ‘ãƒ³å±‹", "ç•‘", "é¢¨è»Š", "é›»æ°—å®¤", "è²¯æ°´ã‚¿ãƒ³ã‚¯", "Aã®å®¶", "Mã®å®¶", "Sã®å®¶"];

        function joinGame() {
            const name = document.getElementById('username').value.trim();
            if(!name) return;
            document.getElementById('login-overlay').style.display = 'none';
            document.getElementById('game-container').style.display = 'flex';
            socket.emit('join_game', {username: name});
        }

        // ç§»å‹•ãƒœã‚¿ãƒ³ã®æ›´æ–°ï¼ˆscroll-actionsã®ã¿ã‚’æ›¸ãæ›ãˆã‚‹ï¼‰
        function updateMoveButtons() {
            const container = document.getElementById('scroll-actions');
            container.innerHTML = ""; 

            allRooms.forEach(room => {
                if (room !== currentRoomName) {
                    const btn = document.createElement('button');
                    btn.className = "qr-btn";
                    btn.innerText = room;
                    btn.onclick = () => move(room);
                    container.appendChild(btn);
                }
            });
        }

        function showCurrentLocation() {
            const overlay = document.getElementById('fullscreen-overlay');
            const fullImg = document.getElementById('fullscreen-img');
            const fullTitle = document.getElementById('fullscreen-title');
            fullImg.src = currentRoomUrl;
            fullTitle.innerText = "ğŸ“ ç¾åœ¨åœ°ï¼š" + currentRoomName;
            overlay.style.display = 'flex';
        }

        function closeFullscreen() {
            document.getElementById('fullscreen-overlay').style.display = 'none';
        }

        function move(roomName) { 
            socket.emit('move', {room: roomName}); 
        }

        function sendMessage() {
            const input = document.getElementById('chat-input');
            if(!input.value.trim()) return;
            socket.emit('chat_message', {message: input.value});
            input.value = "";
        }

        function changePhase(p) { socket.emit('change_phase', {phase: p}); }

        socket.on('room_update', (data) => {
            currentRoomName = data.room;
            currentRoomUrl = data.url;
            updateMoveButtons(); 
        });

        socket.on('phase_update', (data) => {
            document.getElementById('map-display').src = data.url;
            document.body.style.backgroundColor = (data.phase === 'night') ? "#1a1a2e" : "#7494C0";
        });

        socket.on('new_chat', (data) => {
            const area = document.getElementById('chat-area');
            area.innerHTML += `<div class="msg-container"><div class="user-name">${data.name}</div><div class="msg-item">${data.msg}</div></div>`;
            area.scrollTop = area.scrollHeight;
        });

        socket.on('system_message', (msg) => {
            const area = document.getElementById('chat-area');
            area.innerHTML += `<div class="system">${msg}</div>`;
            area.scrollTop = area.scrollHeight;
        });
    </script>
</body>
</html>
